<% include ../partials/header %>

<div class="container">

    <div id="title-container">
        <h1 class="text-center">Snake<span id="title-js">JS</span></h1>
        <hr>
    </div>

    <form action="/play" method="POST">
        <div class="form-group col-md-4 col-offset-4 form-center text-center">
            <% if(message !== "Nickname"){ %>
                <label id="error-msg" class="col-form-label" for="nickname"><%= message %></label>
            <% }else{ %>
                <label class="col-form-label" for="nickname"><%= message %></label>
            <% } %>
            <input class="form-control" type="nickname" id="nickname" name="nickname" placeholder="Choose a Nickname">
            <button id="btn-signin" class="form-btn" type="submit">
                PLAY
            </button>
        </div>
    </form>

</div>



<% include ../partials/footer %>